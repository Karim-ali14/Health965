<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Clinics_Details.Details_fragment"
    android:background="@color/White"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/CardDetails">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="18dp"
                        android:text="العنوان"
                        android:id="@+id/Address"
                        android:textColor="#000"
                        android:gravity="right"
                        android:fontFamily="@font/helveticaneuelt_arabic_roman"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/AddressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:text="هذانفس المساحة، لقد تم تولق"
                        android:layout_below="@id/Address"
                        android:textColor="#000"
                        android:gravity="right"
                        android:fontFamily="@font/helveticaneuelt_arabic_roman"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="18dp"
                        android:text="تفاصيل العيادة"
                        android:id="@+id/Details"
                        android:textColor="#000"
                        android:gravity="right"
                        android:fontFamily="@font/helveticaneuelt_arabic_roman"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:text="هذانفس المساحة، لقد تم تولق"
                        android:layout_below="@id/Details"
                        android:textColor="#000"
                        android:gravity="right"
                        android:fontFamily="@font/helveticaneuelt_arabic_roman"

                        />

                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="15dp"
            android:layout_below="@id/CardDetails"
            android:id="@+id/CardCertificates">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="18dp"
                    android:text="شهادات العيادة"
                    android:id="@+id/Certificates"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/helveticaneuelt_arabic_roman"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerOfCertification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Certificates"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="15dp"
            android:layout_below="@id/CardCertificates"
            android:id="@+id/CardOfImages">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Line"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:padding="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RecyclerOfOption"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_below="@id/CardOfImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/TextBackGround"
            android:id="@+id/List"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="قائمة الأطباء"
                android:textColor="#000"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="(0)"
                android:textSize="17sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:id="@+id/NumberOfDoctors"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="أختر طبيبك المفضل أو يمكنك التخطي والحجز مباشرة"
            android:textColor="@color/TextColor"
            android:layout_below="@id/List"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@id/Skip"
            android:layout_marginBottom="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Skip"
            android:id="@+id/RecyclerForDoctors"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/style_button"
            android:text="تواصل معنا"
            android:textColor="@color/White"
            android:textSize="17dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/RecyclerForDoctors"
            android:layout_marginBottom="10dp"
            android:id="@+id/ReservationButton"/>
    </RelativeLayout>
</ScrollView>