<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ResetPassWord.EnterCode.EnterCodeActivity"
    android:background="@color/White"
    android:id="@+id/Layout">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="Back"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="15dp"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/back"
                        style="@style/ImageSize"
                        android:src="@drawable/back" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ادخل الكود المرسل"
                    android:textColor="#000000"
                    android:textSize="19dp" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/AboveLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/AppBarMain"
        android:background="@drawable/shadow_line"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/AppBarMain"
        app:layout_constraintTop_toBottomOf="@id/AppBarMain"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".40"
        android:orientation="horizontal"
        android:id="@+id/Line1"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/arthealth"
        android:transitionName="imageHealth"
        app:layout_constraintBottom_toTopOf="@id/Line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboveLine"
        app:layout_constraintVertical_bias="1"/>
    <View
        android:id="@+id/LineImage"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/AppBarMain"
        android:background="@drawable/shadow_line"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/Line1"
        android:transitionName="Line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ادخل الكود المرسل على جوالك لاسترجاع كلمة المرور الخاصة بك"
        android:layout_centerInParent="true"
        android:textSize="19dp"
        android:textColor="#000"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Line1"
        android:layout_marginTop="10dp"
        android:id="@+id/LoginAsUser"
        android:gravity="center"
        android:fontFamily="@font/helveticaneuelt_arabic_roman"

        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginAsUser"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/EnterCodeLayOut"
        android:hint="ادخل الكود هنا"
        android:drawablePadding="7dp"
        android:transitionName="EditText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxCornerRadiusTopStart="25dp"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:errorEnabled="false"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginAsUser"
            android:id="@+id/EnterCode"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:drawablePadding="7dp"
            android:gravity="right"
            android:importantForAutofill="noExcludeDescendants"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/EnterCodeLayOut"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/LayoutOfSendText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لم يصلك؟"
            android:textColor="#000"
            android:textSize="18dp"
            android:id="@+id/Arrive"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/helveticaneuelt_arabic_roman"
            />
        <TextView
            android:layout_toLeftOf="@id/Arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أعد الإرسال"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/helveticaneuelt_arabic_roman"
            />
    </RelativeLayout>


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/style_button"
        android:text="استرجاع كلمة المرور"
        android:textColor="@color/White"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutOfSendText"
        android:id="@+id/PasswordBack"
        android:onClick="getPassword"
        android:transitionName="Button"/>


</androidx.constraintlayout.widget.ConstraintLayout>