<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ResetPassWord.PasswordRecovery.PasswordRecoveryActivity"
    android:background="@color/White"
    android:fillViewport="true"
    >
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/Layout">
       <com.google.android.material.appbar.AppBarLayout
           android:id="@+id/AppBarMain"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <androidx.appcompat.widget.Toolbar
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <RelativeLayout
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:onClick="Back"
                       android:layout_alignParentRight="true"
                       android:layout_marginEnd="20dp"
                       android:layout_marginRight="15dp"
                       >
                       <ImageView
                           android:layout_centerInParent="true"
                           android:id="@+id/back"
                           style="@style/ImageSize"
                           android:src="@drawable/back" />
                   </RelativeLayout>

                   <ImageView
                       android:id="@+id/ImageBar"
                       style="@style/ImageSize2"
                       android:layout_alignParentLeft="true"
                       android:layout_marginEnd="20dp"
                       android:layout_marginRight="20dp"
                       android:onClick="Back"
                       android:src="@drawable/back"
                       android:visibility="gone" />

                   <TextView
                       android:id="@+id/Title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:text="استرجاع كلمة المرور"
                       android:textColor="#000000"
                       android:textSize="17dp"
                       android:textStyle="bold" />
               </RelativeLayout>
           </androidx.appcompat.widget.Toolbar>

       </com.google.android.material.appbar.AppBarLayout>

       <View
           android:id="@+id/AboveLine"
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:layout_below="@id/AppBarMain"
           android:background="@drawable/shadow_line"
           android:visibility="visible"
           app:layout_constraintBottom_toBottomOf="@+id/AppBarMain"
           app:layout_constraintTop_toBottomOf="@id/AppBarMain"/>
       <androidx.constraintlayout.widget.Guideline
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintGuide_percent=".50"
           android:orientation="horizontal"
           android:id="@+id/Line1"/>

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toTopOf="@id/Line1"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:src="@drawable/arthealth"
           android:layout_marginBottom="20dp"
           android:id="@+id/image"
           android:transitionName="imageHealth"
           />
       <View
           android:id="@+id/LineImage"
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:layout_below="@id/AppBarMain"
           android:background="@drawable/shadow_line"
           android:visibility="visible"
           app:layout_constraintTop_toBottomOf="@id/Line1"
           android:transitionName="Line"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="ادخل كلمة المرور الجديدة الخاصة بك وتأكد من صحتها"
           android:layout_centerInParent="true"
           android:textSize="19dp"
           android:textColor="#000"
           android:paddingLeft="40dp"
           android:paddingRight="40dp"
           android:paddingBottom="15dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/Line1"
           android:layout_marginTop="10dp"
           android:id="@+id/LoginAsUser"
           android:gravity="center"
           android:fontFamily="@font/helveticaneuelt_arabic_roman"
           />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/NewPasswordLayOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/key"
            android:drawablePadding="7dp"
            android:hint="كلمة المرور الجديدة"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoginAsUser"
            android:transitionName="EditText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:errorEnabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/key"
                android:drawablePadding="7dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp"
                android:gravity="right"
                android:inputType="textPassword"
                android:importantForAutofill="noExcludeDescendants"/>
        </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/PasswordConfirmationLayOut"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="8dp"
          android:layout_marginRight="20dp"
          android:drawableRight="@drawable/key"
          android:drawablePadding="7dp"
          android:hint="تأكيد كلمة المرور الجديدة"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/NewPasswordLayOut"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          app:boxCornerRadiusTopStart="25dp"
          app:boxCornerRadiusBottomEnd="25dp"
          app:boxCornerRadiusBottomStart="25dp"
          app:boxCornerRadiusTopEnd="25dp"
          app:errorEnabled="false"
          android:focusable="true"
          android:focusableInTouchMode="true">
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/PasswordConfirmation"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableRight="@drawable/key"
              android:drawablePadding="7dp"
              android:paddingTop="12dp"
              android:paddingRight="20dp"
              android:paddingBottom="12dp"
              android:gravity="right"
              android:inputType="textPassword"
              android:importantForAutofill="noExcludeDescendants"/>

      </com.google.android.material.textfield.TextInputLayout>

       <Button
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="6dp"
           android:background="@drawable/style_button"
           android:text="تاكيد"
           android:textColor="@color/White"
           android:textSize="17dp"
           app:layout_constraintBottom_toTopOf="@+id/LayoutOfEmail"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/PasswordConfirmationLayOut"
           android:id="@+id/ButtonSure"
           android:transitionName="Button"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>