<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Registration.NewAccountActivity"
    android:background="@color/White"
    android:fillViewport="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Layout"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="Back"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="15dp"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/back"
                        style="@style/ImageSize"
                        android:src="@drawable/back" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/ImageBar"
                    style="@style/ImageSize2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:onClick="Back"
                    android:src="@drawable/back"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="حساب جديد"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:id="@+id/AboveLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/AppBarMain"
        android:background="@drawable/shadow_line"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/AppBarMain"
        app:layout_constraintTop_toBottomOf="@id/AppBarMain"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".37"
        android:orientation="horizontal"
        android:id="@+id/Line1"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/arthealth"
        app:layout_constraintBottom_toTopOf="@id/Line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppBarMain"
        app:layout_constraintVertical_bias="1"
        android:transitionName="imageHealth"/>
    <View
        android:id="@+id/LineImage"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/AppBarMain"
        android:background="@drawable/shadow_line"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/Line1"
        android:transitionName="Line"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Line1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/FullName"
        android:drawableRight="@drawable/account"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:hint="الاسم كامل"
        android:drawablePadding="7dp"
        android:gravity="right"
        android:maxLength="200"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FullName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Email"
        android:drawableRight="@drawable/mail"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:hint="البريد الالكتروني"
        android:drawablePadding="7dp"
        android:inputType="textEmailAddress"
        android:gravity="right"
        android:maxLength="200"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/PhoneNumber"
        android:drawableRight="@drawable/call"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:hint="رقم الجوال"
        android:drawablePadding="7dp"
        android:transitionName="Phone"
        android:inputType="phone"
        android:gravity="right"
        android:maxLength="50"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PhoneNumber"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Password"
        android:drawableRight="@drawable/key"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:hint="كلمة المرور"
        android:drawablePadding="7dp"
        android:transitionName="Pass"
        android:inputType="textPassword"
        android:gravity="right"
        android:maxLength="25"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/PasswordConfirmation"
        android:drawableRight="@drawable/key"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:hint="كلمة المرور"
        android:drawablePadding="7dp"
        android:inputType="textPassword"
        android:gravity="right"
        android:maxLength="25"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/style_button"
        android:text="انشاء حساب"
        android:textColor="@color/White"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordConfirmation"
        android:onClick="createAccount"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/LayoutOfEmail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="هل لديك حساب بالفعل ؟"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/WithOutEmail"
            android:layout_toRightOf="@id/Login"
            />
        <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" تسجيل دخول"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:onClick="LoginIn"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>